<!-- Page header -->
<div class="page-header page-header-light">
    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="/" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
                <a href="/committee" class="breadcrumb-item"> Committee List</a>
                <a href="/committee/assign_committee?id=<%=id%>" class="breadcrumb-item"> Assign List</a>
                <span class="breadcrumb-item active">Add Assign Member</span>
            </div>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>
</div>
<!-- /page header -->

<!-- Content area -->
<div class="content">
    <!-- Vertical form options -->
    <div class="row">
        <div class="col-md-6">

            <!-- Basic layout-->
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title">Add Assign Member</h5>
                </div>

                <% if (messages.error) { %>
                    <div style="margin: 0 20px 0 20px" class="alert alert-danger alert-styled-left alert-dismissible">
                        <span class="font-weight-semibold">Error!</span> <%- messages.error %>
                    </div>
                <% } %>

                <% if (messages.success) { %>
                    <div style="margin: 0 20px 0 20px" class="alert alert-success alert-styled-left alert-arrow-left alert-dismissible">
                        <span class="font-weight-semibold">Success!</span> <%- messages.success %>
                    </div>
                <% } %>

                <div class="card-body">
                    <form action="/committee/assign_committee/add?id=<%= id %>" method="post" name="form1">
                        <input type="hidden" name="id" value="<%- id %>">

                        <div class="form-group">
                            <label>Select Member: </label>
                            <select name="membership_id" class="form-control select-fixed-single" data-fouc>
                                <%for (let i=0; i<member_list.length;i++){%>
                                    <option value="<%=member_list[i].id%>" <%= member_list[i].id === membership_id ? 'selected' : ''%>><%=member_list[i].name%>(<%=member_list[i].membership_number%>)</option>
                                <%}%>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Select Designation: </label>
                            <select name="designation_id" class="form-control select-fixed-single" data-fouc>
                                <%for (let i=0; i<designation_list.length;i++){%>
                                    <option value="<%=designation_list[i].id%>" <%= designation_list[i].id === designation_id ? 'selected' : ''%>><%=designation_list[i].designation_name%></option>
                                <%}%>
                            </select>
                        </div>

                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">Add
                                <i class="icon-paperplane ml-2"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /basic layout -->

        </div>
    </div>
    <!-- /vertical form options -->
</div>
<!-- /content area -->
