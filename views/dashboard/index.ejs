<!-- Page header -->
<div class="page-header page-header-light">
  <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
    <div class="d-flex">
      <div class="breadcrumb">
        <a href="/" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
        <span class="breadcrumb-item active">Dashboard</span>
      </div>
      <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
    </div>
  </div>
</div>
<!-- /page header -->

<!-- Content area -->
<div class="content">
  <div style="font-size: 20px">Welcome to FAAW - Admin Panel</div>

    <div class="row mt-4">
        <% categoryCounts.forEach(item => { %>
            <div class="col-md-4 mb-4">
                <a href="/members?categoryid=<%= item.category_id %>" class="text-decoration-none">
                    <div class="card shadow border-0 h-100 hover-shadow" style="transition: transform 0.2s;">
                        <div class="card-body d-flex align-items-center justify-content-between">
                            <div>
                                <h4 class="font-weight-bold text-dark mb-0"><%= item.category_name %></h4>
                            </div>
                            <div>
              <span class="badge badge-pill"
                    style="background: linear-gradient(135deg, #4e73df, #1cc88a); color: white; padding: 10px 16px; font-size: 1rem;">
                ðŸ‘¥ <%= item.member_count %>
              </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        <% }) %>
    </div>


</div>
<!-- /content area -->
